<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Here we list "overridable" parameters, tough not part of public API. Note that some classes are not available as such -->
        <parameter key="netinfluence_upload.controller.api_upload_image_action">Netinfluence:API:uploadImage</parameter>
        <parameter key="netinfluence_upload.temporary_file_validator.class">NetinfluenceBundle\UploadBundle\Validator\TemporaryFileValidator</parameter>
        <parameter key="netinfluence_upload.file_listener.class">NetinfluenceBundle\UploadBundle\EventListener\FileListener</parameter>
    </parameters>

    <services>
        <service class="%netinfluence_upload.temporary_file_validator.class%" id="netinfluence_upload.temporary_file_validator">
            <argument type="service" id="validator" />
            <call method="setImageValidationConstraints">
                <argument>%netinfluence_upload.validation.image_constraints%</argument>
            </call>
        </service>

        <!-- events listener: store temporary files -->
        <service class="%netinfluence_upload.file_listener.class%" id="netinfluence_upload.file_listener" public="false">
            <argument /><!-- a Gaufrette filesystem will be injected at compilation -->
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Form -->
        <service class="Netinfluence\UploadBundle\Form\Type\FileType" id="netinfluence_upload.form.type.file">
            <tag name="form.type" alias="netinfluence_upload_file" />
        </service>
    </services>
</container>