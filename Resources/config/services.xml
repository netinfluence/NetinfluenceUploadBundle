<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Here we list "overridable" parameters, though not part of public API. Note that some classes are not available as such -->
        <parameter key="netinfluence_upload.temporary_file_validator.class">Netinfluence\UploadBundle\Validator\TemporaryFileValidator</parameter>
        <parameter key="netinfluence_upload.file_listener.class">Netinfluence\UploadBundle\EventListener\FileListener</parameter>
    </parameters>

    <services>
        <service class="%netinfluence_upload.temporary_file_validator.class%" id="netinfluence_upload.temporary_file_validator">
            <argument type="service" id="validator" />
            <call method="setImageValidationConstraints">
                <argument>%netinfluence_upload.validation.image_constraints%</argument>
            </call>
        </service>

        <!-- events listener: store temporary files -->
        <service class="%netinfluence_upload.file_listener.class%" id="netinfluence_upload.file_listener">
            <argument /><!-- a Gaufrette filesystem will be injected at compilation -->
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Form -->
        <service id="netinfluence_upload.form.type.file" class="Netinfluence\UploadBundle\Form\Type\FileType">
            <tag name="form.type" alias="netinfluence_upload_file" />
        </service>
    </services>
</container>
